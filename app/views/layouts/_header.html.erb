<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-white">
    <a class="navbar-brand" href="/">
      <%= image_tag "logo.png" %>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <% if user_signed_in? %>
        <ul class="navbar-nav mb-0 mr-auto">
          <li class="nav-item active">
            <a class="nav-link text-black" href="/ranking">レビューランキング<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-black" href="/reviews">みんなのレビュー一覧</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-black" href="/reviews/new">新規レビュー作成</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-black " href="/question">肌質診断テスト</a>
          </li>
        </ul>
        <ul class="dropdwn">
          <li class="user-name"><%= current_user.name %>様
            <ul class="dropdwn_menu">
              <li><%= link_to "マイページ", mypage_path(current_user) %></li>
              <li><%= link_to "プロフィール編集", edit_mypage_path(current_user) %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, :method => :delete %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <div class="sign-button">
          <a href="/users/sign_up" class="btn-social-Signup">
            <span>Sign Up</span>
          </a>
          <a href="/users/sign_in" class="btn-social-Login">
            <span>Log In</span>
          </a>
        </div>
      <% end %>
    </div>
  </nav>
</header>