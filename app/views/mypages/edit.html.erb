<% breadcrumb :edit_mypage, @user %>
<%= breadcrumbs separator: " &rsaquo; " %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_for(@user, url: {controller: 'mypages', action: 'update' }) do |f| %>
        <div class="review-box">
          <div class="review-title">
            <h3>プロフィール編集</h3>
          </div>
          <div class="review-detail mini">
            <div class="review-icon"><%= f.label :image,"プロフィール画像" %></div>
              <%= f.file_field :image %>
            </div>
            <div class="review-detail">
              <div class="review-icon"><%= f.label :name,"プロフィール名"%></div>
                <%= f.text_field :name %>
              </div>
            <div class="review-detail">
              <div class="review-icon"><%= f.label :skin_type,"肌の特徴"%></div>
                <%= f.text_field :skin_type,:placeholder => "あなたの肌質について入力してください。ex)乾燥肌、敏感肌..." %>
              </div>
            <div class="review-detail">
              <div class="review-icon"><%= f.label :profile,"自己紹介文" %></div>
                <%= f.text_area :profile %>
              </div>
            <div class="review-register-action">
              <%= f.submit "編集完了" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>