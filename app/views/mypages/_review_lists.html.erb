<% @user.reviews.each do |user| %>
  <div class="card-body p-3">
    <div class="reviews">
        <div class="review-image">
          <%= link_to review_path(user) do %>
            <%= image_tag user.image.variant(resize:'150x150').processed %>
          <% end %>
        </div>
      <div class="review-contents">
        <%= link_to review_path(user) do %>
          <h2 class="fs-18 font-weight-bold"><%= user.name %></h2>
        <% end %>
        <p>カテゴリー：
          <%= user.category.parent.name %>,
          <%= user.category.name %>
        </p>
        <%= user.updated_at.strftime("%Y-%m-%d %H:%M")%>
      </div>
    </div>
  </div>
<% end %>