<div class="card-body p-3">
  <div class="row reviews-index">
    <div class="reviews col-md-10">
      <div class="review-image">
        <%= link_to review_path(review.id) do %>
          <%= image_tag review.image.variant(resize:'150x150').processed %>
        <% end %>
      </div>
      <div class="review-contents">
      <%= link_to review_path(review.id) do %>
        <h2 class="fs-18 font-weight-bold"><%= review.name %></h2>
      <% end %>
      <p>カテゴリー：
        <a href="/categories/<%= review.category.parent.id %>">
          <%= review.category.parent.name %>
        </a>,
        <a href="/categories/<%= review.category.id %>">
          <%= review.category.name %>
        </a>
      </p>
      <%= review.updated_at.strftime("%Y-%m-%d %H:%M")%>
      </div>
    </div>
    <div class="users col-md-2">
      <div class="image">
        <%= link_to mypage_path(review.user.id) do %>
          <%= image_tag review.user.image %>
        <% end %>
      </div>
      <div class="name">
        <%= link_to mypage_path(review.user.id) do %>
          <p><%= review.user.name %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>