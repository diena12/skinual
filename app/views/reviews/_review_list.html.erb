<div class="card-body p-3">
  <div class="reviews">
    <div class="review-image">
      <%= link_to review_path(review.id) do %>
        <%= image_tag review.image.variant(resize:'150x150').processed %>
      <% end %>
    </div>
    <div class="review-contents">
      <%= link_to review_path(review.id) do %>
        <h2 class="fs-18 font-weight-bold"><%= review.name %></h2>
      <% end %>
      <%= review.description %>
      <p>カテゴリー：
      <%= review.category.parent.name %>,
      <%= review.category.name %>
      </p>
    </div>
  </div>
</div>