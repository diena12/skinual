<div class="col-md-12">
  <% @comments.each do |comment| %>
    <div class="card-body p-3">
      <div class="row comments">
        <div class="comment-image col-md-2">
          <% if comment.user.image.attached? %>
            <%= link_to mypage_path(comment.user) do %>
              <%= image_tag comment.user.image.variant(resize:'100x100').processed %>
            <% end %>
          <% else %>
            <%= link_to mypage_path(comment.user) do %>
              <%= image_tag "no-image.jpg" %>
            <% end %>
          <% end %>
          <%= link_to mypage_path(comment.user) do %>
            <p><%= comment.user.name %></p>
          <% end %>
        </div>
        <div class="col-md-10">
          <p><%= comment.updated_at.strftime("%Y-%m-%d %H:%M")%></p>
          <h4><%= comment.comment_content %></h4>
        </div>
      </div>
    </div>
  <% end %>
</div>