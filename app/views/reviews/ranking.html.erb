<% breadcrumb :ranking %>
<%= breadcrumbs separator: " &rsaquo; " %>
<div class="container">
  <div class="row ranking">
    <div class="col-md-12 justify-content-center">
      <div class="card bg-white border-none shadow-sm ">
        <div class=" card-header font-weight-bold">レビューランキング</div>
          <% @all_ranks.each.with_index(1) do |review, i| %>
            <div class="card-body p-3">
              <div class="reviews">
                <div class="review-image">
                  <%= link_to review_path(review.id) do %>
                    <%= image_tag review.image.variant(resize:'150x150').processed %>
                  <% end %>
                </div>
                <div class="review-contents">
                  <%= link_to review_path(review.id) do %>
                    <h2 class="fs-18 font-weight-bold">第<%= i %>位 <%= review.name%></h2>
                  <% end %>
                  <p>カテゴリー：
                    <%= review.category.parent.name %>,
                    <%= review.category.name %>
                  </p>
                  <%= review.updated_at.strftime("%Y-%m-%d %H:%M")%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render partial: 'layouts/footer' %>
